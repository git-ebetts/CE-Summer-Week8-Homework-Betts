extends layout
block content
    a(href="/things") Back to list
    h1 
        =thing.name
    form.form(method="POST")
        div.form-group
            label(for="thing_name") Name
            input.form-control#thing_name(name="name" value=thing.name required=true)
        span
            button.btn.btn-primary(type="submit" style="float:left; margin-right: 10px")
                | Save
   
    form.form(method='POST', action='/things/#{thing._id}?_method=DELETE')
        span 
            button.btn.btn-primary(type="submit" style="float:left")
                | Delete
                        
